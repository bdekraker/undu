{
  "name": "undu",
  "version": "0.0.1",
  "description": "Simple version control for humans. Undo anything.",
  "keywords": ["version-control", "undo", "backup", "vcs", "git-alternative"],
  "author": "Benjamin DeKraker <aries.benjamin@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bdekraker/undu"
  },
  "type": "module",
  "bin": {
    "undu": "./src/cli/index.ts"
  },
  "scripts": {
    "start": "bun run src/cli/index.ts",
    "dev": "bun --watch src/cli/index.ts",
    "build": "bun build src/cli/index.ts --compile --outfile=dist/undu",
    "build:all": "bun run build:linux && bun run build:mac && bun run build:windows",
    "build:linux": "bun build src/cli/index.ts --compile --target=bun-linux-x64 --outfile=dist/undu-linux",
    "build:mac": "bun build src/cli/index.ts --compile --target=bun-darwin-arm64 --outfile=dist/undu-mac",
    "build:windows": "bun build src/cli/index.ts --compile --target=bun-windows-x64 --outfile=dist/undu.exe",
    "mcp": "bun run src/mcp/server.ts",
    "test": "bun test"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
