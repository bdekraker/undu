{
  "name": "undu",
  "version": "0.0.2",
  "description": "Simple version control for humans. Undo anything.",
  "keywords": ["version-control", "undo", "backup", "vcs", "git-alternative", "cli"],
  "author": "Benjamin DeKraker <aries.benjamin@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bdekraker/undu"
  },
  "homepage": "https://github.com/bdekraker/undu#readme",
  "bugs": {
    "url": "https://github.com/bdekraker/undu/issues"
  },
  "type": "commonjs",
  "bin": {
    "undu": "./bin/undu.js"
  },
  "files": [
    "bin/",
    "src/",
    "dist/bin/"
  ],
  "scripts": {
    "start": "bun run src/cli/index.ts",
    "dev": "bun --watch src/cli/index.ts",
    "build": "bun build src/cli/index.ts --compile --outfile=dist/undu",
    "build:win": "bun build src/cli/index.ts --compile --target=bun-windows-x64 --outfile=dist/bin/undu-win.exe",
    "build:linux": "bun build src/cli/index.ts --compile --target=bun-linux-x64 --outfile=dist/bin/undu-linux",
    "build:macos": "bun build src/cli/index.ts --compile --target=bun-darwin-arm64 --outfile=dist/bin/undu-macos",
    "build:all": "npm run build:win && npm run build:linux && npm run build:macos",
    "mcp": "bun run src/mcp/server.ts",
    "test": "bun test"
  },
  "engines": {
    "node": ">=16"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  }
}
